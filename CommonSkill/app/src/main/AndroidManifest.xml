<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wenjian.commonskill">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:name=".CommonApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".bluetooth.DeviceListActivity"
            android:label="bluetooth">

            <!--
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            -->
        </activity>
        <activity
            android:name=".okhttp.OkhttpActivity"
            android:label="okhttp" />
        <activity android:name=".ui.DiskCacheActivity" />
        <activity android:name=".ui.DigestActivity" />
        <activity android:name=".ui.GlideActivity" />
        <activity android:name=".ui.RetrofitActivity" />
        <activity android:name=".ui.AnimatorActivity" />
        <activity android:name=".ui.VelocityTrackerActivity" />
        <activity android:name=".ui.ScrollerActivity" />
        <activity android:name=".window.WindowActivity" />
        <activity android:name=".ui.IntentServiceActivity" />

        <service android:name=".thread.LocalIntentService" />

        <activity android:name=".ui.BitmapActivity"></activity>
    </application>

</manifest>